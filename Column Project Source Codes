#include <iostream>
#include <iomanip>
using namespace std;
int main()
{
    int column1;
    int column2;
    cout << "Type the column number "; // enter how many "*" you want to add on your piramite 
    cin >> column1;
    for(int i = 1; i <= column1; ++i) 
    
    /* this codes working mentality is like this: 
    you enter how many u want on column1 and for loop will accept this like "i" 
    so if i<=column1 >>> app will generate your piramite. */
    
    {
        for(int j = 1; j <= i; ++j)
        {
            cout << "* "; // you can change this however u want to display in your piramite it will work in characters numbers or special char. //
        }
        cout << "\n";
    }
    cout<<"Type the column number";
    cin>>colum2;
    for(int i = column2; i >= 1; --i) // as u can see the difference between left>right and right>left is in (25 , 30,31)
    if you want your piramite left>right u just add ++ before "i"
   
    
    /* this loop is working like first one but not in same way. First loop will generate your piramite left to>> right. 
    second one will generate right to left and you piramite will be ready */
    {
        for(int j = 1; j <= i; ++j)
        {
            cout << "* ";
        }
        cout << endl;
    }
}
