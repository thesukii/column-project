#include <iostream>
using namespace std;
int main()
{
    int column1;
    int column2;
    cout << "Type the column number ";
    cin >> column1;
    for(int i = 1; i <= column1; ++i)
    {
        for(int j = 1; j <= i; ++j)
        {
            cout << "* ";
        }
        cout << "\n";
    }
    cout<<"Type the column number";
    cin>>colum2;
    for(int i = column2; i >= 1; --i)
    {
        for(int j = 1; j <= i; ++j)
        {
            cout << "* ";
        }
        cout << endl;
    }
}
